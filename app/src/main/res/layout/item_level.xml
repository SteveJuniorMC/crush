<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/levelButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/level_button_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/levelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:fontFamily="sans-serif-bold"
        app:layout_constraintTop_toTopOf="@id/levelButton"
        app:layout_constraintBottom_toBottomOf="@id/levelButton"
        app:layout_constraintStart_toStartOf="@id/levelButton"
        app:layout_constraintEnd_toEndOf="@id/levelButton" />

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_lock"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/levelButton"
        app:layout_constraintBottom_toBottomOf="@id/levelButton"
        app:layout_constraintStart_toStartOf="@id/levelButton"
        app:layout_constraintEnd_toEndOf="@id/levelButton" />

    <!-- Stars -->
    <LinearLayout
        android:id="@+id/starsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/levelButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="2dp" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star"
            android:layout_marginEnd="2dp" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
